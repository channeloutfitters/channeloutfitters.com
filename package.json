  "devDependencies": {
    "cspell": "^6.1.2",
    "html-validate": "^7.1.1",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0"
  }
}
