    "cross-env": "^7.0.3",
    "cspell": "^6.18.0",
    "html-validate": "^7.11.1",
    "html-validate-markdown": "^3.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6"
  },
